.pg-confirm__content-phone-col-content{
    
    .input-group{
        justify-content: flex-start;
        flex-wrap: nowrap;

        .dropdown{
            min-width: max-content;
        }
        .custom-input{
            width: 100%;
        }
        .input-group-append{
            min-width: max-content;
        }
    }
    
    .show>.btn-primary.dropdown-toggle:focus{
        box-shadow: none;
    }

    .dropdown-toggle{
        height: 40px !important;
        border: none !important;
        background-color: var(--back-bg) !important;
    }
    .dropdown-menu{
        min-width: max-content;
        max-height: 350px;
        overflow-x: hidden;
        overflow-y: auto;
    }

    .dropdown-between{
        display: flex;
        align-items:center;
        justify-content: space-between;
    }
    
}
